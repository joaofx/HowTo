@using HowShop.Web.Html
@model IEnumerable<User>

<h1>Users</h1>

<div class="row">
    <div class="col-lg-12">
        <a href="@(Url.Action<AdminUserController>(x => x.New()))">New User</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayLabel(x => x.Name)</th>
                        <th>@Html.DisplayLabel(x => x.Email)</th>
                        <th>@Html.DisplayLabel(x => x.Profile)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@Html.Display(user, p => p.Name)</td>
                            <td>@Html.Display(user, p => p.Email)</td>
                            <td>@Html.Display(user, p => p.Profile)</td>
                            <td>
                                <a href="@(Url.Action<AdminUserController>(c => c.Edit(user.Id)))">Edit</a> | 
                                <a href="@(Url.Action<AdminUserController>(c => c.Edit(user.Id)))" data-toggle="modal" data-target="#myModal-@user.Id">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            @Html.NoData("There are no Users")
        }
    </div>
</div>
