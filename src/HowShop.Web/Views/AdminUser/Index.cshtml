@model IEnumerable<User>

<h1>Users</h1>

<div class="row">
    
    <div class="col-lg-12">
        <a href="@(Url.Action<AdminUserController>(x => x.New()))">New User</a>    
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                    <tr>
                        <td>@Html.Display(user, p => p.Name)</td>
                        <td>@Html.Display(user, p => p.Email)</td>
                        <td>
                            <a href="@(Url.Action<AdminUserController>(c => c.Edit(new UserEdit.Query() { Id = user.Id })))">Edit</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
    
</div>
