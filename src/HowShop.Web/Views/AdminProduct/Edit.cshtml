@using SolidR.Mvc
@model HowShop.Core.Commands.ProductEdit.Command

<div class="row">
    <div class="col-md-12">

        <h1>Edit Product</h1>
        
        @Html.ValidationPanel()

        <div class="well bs-component">
            
            <form method="post" action="@Url.Action("Edit")" class="form-horizontal">
                
                <fieldset>

                    <div class="form-group">
                        @Html.Label(m => m.Name)
                        <div class="col-lg-10">
                            @Html.Input(m => m.Name)
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.Label(m => m.Price)
                        <div class="col-lg-10">
                            @Html.Input(m => m.Price)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            or <a href="@Url.Action("Index")">Back to Products</a>
                        </div>
                    </div>
                </fieldset>

            </form>

        </div>

    </div>
</div>